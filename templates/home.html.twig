{% extends 'base.html.twig' %}

{% block title %}GreenGoodies | Accueil {% endblock %}

{% block body %}
    <div class="main-container">
        <div class="welcome-container">
            <div class="welcome-left">
                <div class="welcome-left-content">
                    <h1>Bienvenue</h1>
                    <p>Découvrez notre univers de produits durables et éthiques pour une consommation responsable</p>
                    <br>
                    <p>Retrouvez des articles d'hygiène & beauté, des accessoires & boissons et du prêt-à-porter</p>
                </div>
            </div>

            <div class="welcome-right">
                <img class="welcome-picture" src="{{asset('../img/hero-header-picture.png') }}" alt="Hero Header">
            </div>
        </div>
        
        <h2 class="product-title"> Nos produits </h2>
        <div class="product-container">
            <div class="product-cards-container">
                {% for product in products %}
                    <div class="product-card">
                        <img class="product-card-picture" src="{{product.picture }}" alt="{{ product.name }}">
                        <div class="product-info">
                            <h3 class="product-card-title">{{ product.name }}</h3>
                            <p class="product-card-description">{{ product.shortDescription }}</p>
                            <p class="product-card-price">{{ product.price|number_format(2, '.', ',') }} €</p>
                            <button class="product-card-button">Voir le produit</button>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun produit disponible.</p>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

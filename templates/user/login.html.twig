{% extends 'base/base.html.twig' %}

{% block title %}Green Goodies | Connexion{% endblock %}

{% block body %}
    <section class="registration-container">
        <div class="banner-left">
            <img src="{{ asset('/img/conviction-picture.png') }}" alt="Inscription">
        </div>

        <div class="form-right form-login">
            <h2>Connexion</h2>

        <form class="login-form" action="{{ path('app_login') }}" method="post">
            {% if error %}
                <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="email">Adresse email</label>
                <input type="email" value="{{ email }}" id="email" name="_username" required class="form-control" />
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" required class="form-control" />
            </div>

            <div class="login-button-container">
                <button type="submit" class="button-type-one">Se connecter</button>
            </div>
        </form>


            <p class="login-link"><a href="{{ path('app_register') }}">Pas encore de compte ? S'inscrire</a></p>
        </div>
    </section>
{% endblock %}
